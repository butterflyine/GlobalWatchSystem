@model GlobalWatchSystem.Models.ViewModel.ChangePasswordModel


<hgroup class="col-lg-12">
    <h3 class="page-header">@Resources.UserManagementEdit</h3>
</hgroup>

<article>
    @using (Html.BeginForm("changepassword", "account"))
    {
        @Html.AntiForgeryToken()

        <div class="col-lg-6">
            @Html.HiddenFor(m => m.UserId)
            <div class="form-group">
                <div class="edit-item">
                    @Html.LabelFor(u => u.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="edit-item">
                    @Html.LabelFor(u => u.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Password)
                </div>

                <div class="edit-item">
                    @Html.LabelFor(u => u.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.ConfirmPassword)
                </div>
            </div>
            <button type="submit" class="btn btn-default">@Resources.ActionSave</button>
        </div>
    }
</article>