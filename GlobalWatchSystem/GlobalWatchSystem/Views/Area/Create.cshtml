@model GlobalWatchSystem.Models.ViewModel.AreaModel

<hgroup class="col-lg-12">
    <h3 class="page-header">@Resources.AreaManagementCreate</h3>
</hgroup>

<article>
    @using (Html.BeginForm("create", "area"))
    {
        @Html.AntiForgeryToken()

        <div class="col-lg-6">
            <div class="form-group">
                <div class="edit-item">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
                    @Html.ValidationMessageFor(u => u.Name)
                </div>

                <div class="edit-item">
                    @Html.LabelFor(m => m.Description)
                    @Html.TextAreaFor(m => m.Description, new {@class = "form-control"})
                </div>
                <div class="edit-item">
                    @Html.LabelFor(u => u.ParentId)
                    @Html.DropDownList("ParentId", (IEnumerable<SelectListItem>)ViewBag.Areas, new { @class = "form-control" })
                </div>
            </div>
            <button type="submit" class="btn btn-default">@Resources.ActionSave</button>
        </div>
    }
</article>