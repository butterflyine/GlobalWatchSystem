@model GlobalWatchSystem.Models.ViewModel.DeviceModel

<hgroup>
    <h3 class="page-header">@Resources.MenuDeviceManagement - @Resources.devHistoryMode</h3>
</hgroup>
<article id="device-history">
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Resources.DeviceInformation</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    <span class="head">@Resources.DeviceName : </span> @Html.DisplayFor(m => m.Name)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <span class="head">@Resources.DeviceIMEI : </span>
                                    <label id="devIMEI" data-channel-desc="@Resources.ChannelNo">@Html.DisplayFor(m => m.IMEI)</label>
                                </div>
                                <div class="col-lg-4">
                                    <span class="head">@Resources.DeviceNumber : </span> @Html.DisplayFor(m => m.SimNumber)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <span class="head">@Resources.StartTime : </span>
                                    <input size="16" type="text" value="@DateTime.Now.AddHours(-1).ToString("yyyy-MM-dd HH:mm")" id="startTimePicker" readonly class="form_datetime">
                                </div>
                                <div class="col-lg-4">
                                    <span class="head">@Resources.EndTime : </span>
                                    <input size="16" type="text" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")" id="endTimePicker" readonly class="form_datetime">
                                </div>
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-default" id="btnView">@Resources.Query</button>
                                    <button type="button" class="btn btn-default" id="btnExport">@Resources.ExportData</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-red">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i>@Resources.chartTemperature</h3>
                        </div>
                        <div class="panel-body">
                            <div id="temp-line-chart"></div>
                            <div class="text-right">
                                <a href="#">@Resources.chartViewDetails <i class="fa fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>
@section HistoryModeScripts{
    <script src="~/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/assets/js/locales/bootstrap-datetimepicker.zh-cn.js"></script>
    <script src="~/assets/js/plugins/morris/raphael.min.js"></script>
    <script src="~/assets/js/plugins/morris/morris.min.js"></script>
    <script src="~/assets/js/historychartlibrary.js"></script>
}
