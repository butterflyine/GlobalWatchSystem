@section Header {
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <small>@Resources.SiteName</small>
            </h1>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-sitemap fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.AreaCount</div>
                        <div class="pannel-href">
                            @Html.ActionLink(@Resources.ActionCreateArea, "create", "area")
                        </div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("index", "area")">
                <div class="panel-footer">
                    <span class="pull-left">@Resources.ActionViewAll</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-desktop fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.DeviceCount</div>
                        <div class="pannel-href">
                            @Html.ActionLink(@Resources.ActionCreateDevice, "create", "device")
                        </div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("tablemode", "device")">
                <div class="panel-footer">
                    <span class="pull-left">@Resources.ActionViewAll</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-user fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.UserCount</div>
                        <div class="pannel-href">
                            @Html.ActionLink(@Resources.ActionCreateUser, "create", "account")
                        </div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("index","account")">
                <div class="panel-footer">
                    <span class="pull-left">@Resources.ActionViewAll</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-truck fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.PlanCount</div>
                        <div class="pannel-href">
                            @Html.ActionLink(Resources.ActionCreatePlan, "create", "TransportPlan")
                        </div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index","TransportPlan")">
                <div class="panel-footer">
                    <span class="pull-left">@Resources.ActionViewAll</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <label hidden="hidden" id="areaId">@ViewBag.areaId</label>
    <div id="mapContainer" style="width:auto;height:768px" data-dev-infors="@Resources.DeviceInformation"
         data-dev-name="@Resources.DeviceName"
         data-dev-belongto="@Resources.AreaBelonged"
         data-dev-curve="@Resources.devCurveMode"
         data-dev-historycurve="@Resources.devHistoryMode">
    </div> 
</div>
@section MapModeScripts{
    <script src="http://webapi.amap.com/maps?v=1.3&key=20bfaeaa29dde4edc6b521bdb13252f0"></script>
    <script src="http://api.map.baidu.com/api?v=2.0&ak=j8HK07y0Sc6V3n9UMLo1Wd5IYFCBMEyU"></script>
    <script src="~/assets/js/MapLibraryBaidu.js"></script>
}